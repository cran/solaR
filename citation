citHeader("To cite package 'solaR' in publications use:")
     
     desc <- packageDescription("solaR")
     year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", desc$Date)
     vers <- paste("R package version", desc$Version)
     
     citEntry(entry="Manual",
              title = "solaR: Calculation of Solar Radiation and PV Systems.",
              author = personList(as.person("Oscar Perpinan")),
              year = year,
              note = vers,
     
              textVersion =paste("Oscar Perpinan (",
									year,
									"). solaR: Calculation of Solar Radiation and PV Systems. ",
									vers, ".", sep=""))
